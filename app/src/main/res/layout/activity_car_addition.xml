<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarAddition">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Car Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/carNameSave"
                android:layout_width="241dp"
                android:layout_height="48dp"
                android:hint="Car Name to save"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carMake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Car Make"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/carMakeText"
                android:layout_width="241dp"
                android:layout_height="42dp"
                android:hint="Car Make"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Car Model"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/carModelText"
                android:layout_width="241dp"
                android:layout_height="41dp"
                android:hint="Car Model" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cartankCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fuel Capacity"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/carCapacityText"
                android:layout_width="241dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Car capacity" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Year of Model"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/carYearText"
                android:layout_width="241dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:hint="Car Model Year" />
        </TableRow>


        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fuelUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Units"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/fuelUnitsText"
            android:layout_width="241dp"
            android:layout_height="wrap_content" />
    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/currency_toSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Currency"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/Currency_toSaveText"
                android:layout_width="241dp"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/distance_toSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Distance"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/distance_toSaveText"
                android:layout_width="241dp"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Fuel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Distance"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/fuel_typeText"
                android:layout_width="241dp"
                android:layout_height="wrap_content" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/carNameSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="25dp"
        android:text="Save" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-139dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/carNameSaveButton"
        android:text="cancel" />


</RelativeLayout>